<%= form_tag "/post/update", method: post do %>
<input type="hidden" name="post_id" value="<%=@post.id%>">
제목 : <input type="text" name="title" value="<%=@post.title%>"> </br>
내용 : <textarea name="content" rows="8" cols="48" placeholder="내용">
    <%=@post.content%> </textarea></br>

<%=submit_tag '수정완료', :name=>nil%>
| <%=link_to '뒤로가기', post_indext_path%>
<%end%>